<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    @Styles.Render("~/Content/maincss")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("specialcss", required: false)
</head>
<body>
    <header>
        <div class="row topBanner py-2">
            <div class=" col-10 col-lg-9 row text-light myAccount">
                <div class="dropdown">
                    <button class="btn btn-secondary signInBtn" type="button" id="signInDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        My Account
                    </button>
                    <div class="dropdown-menu" aria-labelledby="signInDropdown">
                        <a class="dropdown-item" href="@Url.Action("Login", "Account")">Sign in</a>
                        <a class="dropdown-item" href="register.html">Create an Account</a>
                    </div>
                </div>
            </div>
            <div class="d-none d-lg-flex col-lg-3 justify-content-center">
                <p class="my-auto text-light customerCall"><i class="fas fa-phone"></i>   Customer service<a href="tel:1-800-332-0055"><b>1-800-332-0055</b></a></p>
            </div>
            <div class="col-2 d-lg-none d-flex align-items-center justify-content-center">
                <a href="@Url.Action("Index", "Cart")"><i class="fas fa-shopping-cart fa-2x text-light"></i></a>
            </div>
        </div>
        <div class="row">
            <div class="col-4 col-lg-3 d-flex justify-content-center">
                <a href="@Url.Action("Index", "Home")"><img class="logoBanner" src="~/Content/img/MainPage/logo/logo-banner.jpg"></a>
            </div>
            <div class="col-8 col-lg-6 my-auto">

                @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class = "form-inline d-flex justify-content-center md-form form-sm active-pink-2 mt-2" }))
                {
                    <!-- Search form -->                    
                        @Html.TextBox("SearchString", null, new { @class = "form-control form-control-sm mr-3 w-75 no-border" , @placeholder = "Search" })
                        
                        <i class="fas fa-search" aria-hidden="true"></i>                   
                }
            </div>
            <div class="d-none d-lg-block col-lg-3 row">
                <div class="col-4 mx-auto cartBackground h-100">
                    <a href="@Url.Action("Index", "Cart")">
                        <div class="text-center pt-3">
                            <i class="fas fa-shopping-cart fa-2x text-light"></i>
                        </div>
                        <div class="d-flex justify-content-center text-center mt-2">
                            <p class="text-light font-weight-bold">MY CART</p>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light mb-3">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicNav" aria-controls="basicNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="container justify-content-center">
                <div class="collapse navbar-collapse" id="basicNav">
                    <ul class="navbar-nav mr-auto font-weight-bold">
                        <li class="nav-item active px-3">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                HOME</i>
                                <span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link" href="@Url.Action("Index", "Category", new { category = 1} )">HAIR</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link" href="@Url.Action("Index", "Category", new { category = 2} )">SKIN</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link" href="@Url.Action("Index", "Category", new { category = 3} )">MAKE-UP KITS</a>
                        </li>
                        <li class="nav-item dropdown px-3">
                            <a class="nav-link" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">NAIL</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenu">
                                <a class="dropdown-item" href="@Url.Action("Index", "Category", new { category = 5} )">NAIL PAINTS</a>
                                <a class="dropdown-item" href="@Url.Action("Index", "Category", new { category = 6} )">NAIL ARTS</a>
                            </div>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link" href="@Url.Action("Index", "Category", new { category = 7} )">JEWELLRY</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link" href="@Url.Action("Index", "Category", new { category = 8} )">WEDDING KITS</a>
                        </li>
                        <li class="nav-item px-3">
                            <a class="nav-link" href="@Url.Action("Index", "Category", new { category = 9} )">UPCOMING PRODUCTS</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        @RenderBody()
        <button type="button" class="bottomBtnAbout">
            <a href="about-us.html"><i class="fas fa-question"></i></a>
        </button>
        <button type="button" class="bottomBtnContact">
            <a href="contact-us.html"><i class="fas fa-id-card"></i></i></a>
        </button>
    </main>
    <footer>
        <div class="row justify-content-center mt-3">
            <div class="col-10 row newLetter">
                <div class="col-lg-6 d-none d-lg-block">
                    <h4>Newletter</h4>
                    <div>Get the latest news on new arrivals, gifts, special offers and other discount information.</div>
                </div>
                <div class="col-12 col-lg-6 justify-content-center d-flex">
                    <form id="newletter-sub" class="my-auto" action="success.html">
                        <input type="email" name="newletter" id="newletter" placeholder="Enter your email andress">
                        <input type="submit" name="btn-newletter" value="SUBCRIBLE">
                    </form>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mt-3">
            <div class="col-5 px-0">
                Have feedback? <a href="feedback.html" class="feedbackLink">Send us</a>
            </div>
            <div class="col-5 px-0 text-right">
                <a href="sitemap.html" class="sitemapLink">Sitemap</a>
            </div>
        </div>
        <div class="row justify-content-center d-flex mt-4 mx-5 footer-info">
            <div class="col-5 px-5">
                <h4>CALIFORNIA PROPOSITION 65</h4>
                <div class="footer-info-inner">We request that you read through the disclosure below which applies to the products you have selected before continuing on with your order. California Proposition 65 requires special product labeling for products containing certain chemicals known to the State of California to cause cancer, birth defects or other reproductive harm if the product will expose the consumer to such chemicals. Prop 65 Warning: This product contains lead, a chemical known to the State of California to cause cancer, birth defects, and other reproductive harm. Wash hands after handling. For more information check the State of California Proposition 65, visit website: General Information about Prop 65</div>
            </div>
            <div class="col-7 row px-2">
                <div class="col">
                    <ul>
                        <h4>Information</h4>
                        <li><a class="linkColor" href="product.html?id=sk-1">Product</a></li>
                        <li><a class="linkColor" href="category.html?type=type-category-skin-tcfhtml">Category</a></li>
                    </ul>
                </div>
                <div class="col">
                    <ul>
                        <h4>Our Company</h4>
                        <li><a class="linkColor" href="about-us.html">About Us</a></li>
                        <li><a class="linkColor" href="contact-us.html">Contact Us</a></li>
                        <li><a class="linkColor" href="feedback.html">Feedback</a></li>
                    </ul>
                </div>
                <div class="col">
                    <ul>
                        <h4>simplon</h4>
                        <li>3051 E. Washington Blvd</li>
                        <li>Los Angeles, CA 90023, U.S.A. </li>
                        <li><a class="linkColor" href="tel:323 881 0805">Tel: (323) 881-0805</a></li>
                        <li><a class="linkColor" href="mailto:help@simplon.com">Email: help@simplon.com</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row mt-2 d-flex justify-content-center">
            <div class="col-5">
                <h4 class="footer-copyright">©2020 APTECH BMT Group. All Rights Reserved.</h4>
            </div>
            <div class="col-5 d-flex justify-content-end footer-follow-symbol">
                <i class="fab fa-facebook-square fa-2x px-1"></i>
                <i class="fab fa-instagram-square fa-2x px-1"></i>
                <i class="fab fa-youtube-square fa-2x px-1"></i>
                <i class="fab fa-pinterest-square fa-2x px-1"></i>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/mainjs")
    @RenderSection("scripts", required: false)
</body>
</html>
