@{
    ViewBag.Title = "Home Page";
}

@model List<Shop.Models.Product>

<div id="carouselEx" class="carousel slide mb-3" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselEx" data-slide-to="0" class="active"></li>
        <li data-target="#carouselEx" data-slide-to="1"></li>
        <li data-target="#carouselEx" data-slide-to="2"></li>
        <li data-target="#carouselEx" data-slide-to="3"></li>
        <li data-target="#carouselEx" data-slide-to="4"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/Content/img/MainPage/slide/slide-1.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/MainPage/slide/slide-2.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/MainPage/slide/slide-3.png" alt="Third slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/MainPage/slide/slide-4.png" alt="Fourth slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/Content/img/MainPage/slide/slide-5.png" alt="Fifth slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselEx" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselEx" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!---------- SLIDE ---------->
<div class="row d-flex justify-content-center mb-3">
    <div class="col-5 mr-3"><a href="product.html?id=mk-3"><img class="mainPageSubBannerL float-right" src="~/Content/img/MainPage/logo/banner-3.jpg"></a></div>
    <div class="col-5 row">
        <div class="col-12"><a href="@Url.Action("Login", "Account")"><img class="mainPageSubBanner" src="~/Content/img/MainPage/logo/banner-1.jpg"></a></div>
        <div class="col-12"><a href="@Url.Action("Index", "Category")"><img class="mainPageSubBanner" src="~/Content/img/MainPage/logo/banner-2.jpg"></a></div>
    </div>
</div>
<div class="row justify-content-center">
    <h5 class="block-title-section">
        <span>Featured</span>
        Products
    </h5>
</div>
<div class="row my-3 d-flex justify-content-center">
    @foreach (var item in Model)
    {
        if (item.Hot == 1)
        { 
        <div class="col-2 mx-2 productItemContainer">
            <a href="@Url.Action("Index", "Product", new { id = item.Id})"><img src="@Server.UrlDecode(item.FeatureImage)" class="mx-auto d-block"></a>
            <div class="container d-block mt-2">
                <h4 class="text-center cardTitle"><a href="#">@item.Name</a></h4>
                <div class="text-center priceSection mb-2">
                    $ @item.Price USD
                </div>
            </div>
        </div>
        }
    }
</div>
<div class="row justify-content-center">
    <h5 class="block-title-section">
        <span>New</span>
        Products
    </h5>
</div>
<div class="row my-3 d-flex justify-content-center">
    @foreach (var item in Model)
    {
        if (item.Hot == 2)
        {
            <div class="col-2 mx-2 productItemContainer">
                <a href="@Url.Action("Index", "Product", new { id = item.Id})"><img src="@Server.UrlDecode(item.FeatureImage)" class="mx-auto d-block"></a>
                <div class="container d-block mt-2">
                    <h4 class="text-center cardTitle"><a href="#">@item.Name</a></h4>
                    <div class="text-center priceSection mb-2">
                        $ @item.Price USD
                    </div>
                </div>
            </div>
        }
    }
</div>
<div class="col-11 row justify-content-center mx-auto mb-2">
    <div class="col mx-3">
        <div class="box-offer">
            <div class="box-offer-inner">
                <i class="las la-phone la-3x"></i>
                <div class="wrap-text">
                    <div class="box-offer-title">
                        <h4>+3(800)2345-6789</h4>
                    </div>
                    <div class="box-offer-desc">
                        Round-the-clock free hotline (24/7)
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col mx-3">
        <div class="box-offer">
            <div class="box-offer-inner">
                <i class="las la-clock la-3x"></i>
                <div class="wrap-text">
                    <div class="box-offer-title">
                        <h4>Hours</h4>
                    </div>
                    <div class="box-offer-desc">
                        7 days a week from 9:00 am to 7:00 pm
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col mx-3">
        <div class="box-offer">
            <div class="box-offer-inner">
                <i class="las la-truck la-3x"></i>
                <div class="wrap-text">
                    <div class="box-offer-title">
                        <h4>Free shipping</h4>
                    </div>
                    <div class="box-offer-desc">
                        We provide you with fast and free delivery
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col mx-3">
        <div class="box-offer">
            <div class="box-offer-inner">
                <i class="las la-undo-alt la-3x"></i>
                <div class="wrap-text">
                    <div class="box-offer-title">
                        <h4>Return & Exchange</h4>
                    </div>
                    <div class="box-offer-desc">
                        You can return or exchange the item within 30 days.
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
